<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.kapeks.security.model.AppUser" table="users">
		<id name="username" type="string">
			<column name="username" length="45" />
			<generator class="assigned" />
		</id>
		<property name="password" type="string">
			<column name="password" length="60" not-null="true" />
		</property>
		<property name="enabled" type="boolean">
			<column name="enabled" not-null="true" />
		</property>
		<set name="userRoles" table="user_roles" inverse="true" fetch="select">
			<key>
				<column name="username" length="45" not-null="true" />
			</key>
			<one-to-many class="com.kapeks.security.model.UserRole" />
		</set>
	</class>
</hibernate-mapping>